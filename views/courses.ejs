<!DOCTYPE html>
<html>
<head>
  <title>Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="mb-4">Available Courses</h2>
    <div class="list-group">
      <% courses.forEach(course => { %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5><%= course.title %></h5>
            <p class="mb-1"><%= course.description %></p>
            <small>Instructor: <%= course.instructor %> | Seats: <%= course.seatsAvailable %></small>
          </div>
          <form action="/register-course" method="POST">
            <input type="hidden" name="courseId" value="<%= course._id %>">
            <button type="submit" class="btn btn-outline-primary">Register</button>
          </form>
        </div>
      <% }) %>
    </div>
    <a href="/dashboard" class="btn btn-link mt-3">Back to Dashboard</a>
  </div>
</body>
</html>