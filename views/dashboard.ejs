<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2>Welcome, <%= username %>!</h2>

    <% if (message) { %>
      <div class="alert alert-info mt-3"><%= message %></div>
    <% } %>

    <h4 class="mt-4">Your Registered Courses</h4>
    <ul class="list-group">
      <% if (registeredCourses.length === 0) { %>
        <li class="list-group-item">No courses registered yet.</li>
      <% } else { %>
        <% registeredCourses.forEach(course => { %>
          <li class="list-group-item"><%= course.title %> - <%= course.instructor %></li>
        <% }) %>
      <% } %>
    </ul>

    <div class="mt-4">
      <a href="/courses" class="btn btn-primary">View All Courses</a>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>
  </div>
</body>
</html>